<div class="row">
  <div class="col-lg-12  mx-auto">
    <div class="card card-signin flex-row my-5">
      <div class="card-img-left d-none d-md-flex">
         <!-- Background image for card set in CSS! -->
      </div>



      <h5 class="card-title text-center">Register</h5>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, placeholder: "Your name", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :username %><br>
            <%= f.text_field :username, placeholder: "Your @username", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :location %><br>
            <%= f.text_field :location, placeholder: "Your Location", class: "form-control" %>
          </div>

          <div class="form-group>
            <%= f.label :bio %><br>
            <%= f.text_area :bio, placeholder: "Bio", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :avatar %><br>
            <%= f.file_field :avatar %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: "btn btn-lg btn-google btn-block text-uppercase" %>
          </div>
        <% end %>



      </div>
    </div>
  </div>
</div>




 
